        <Button Text="Header and Footer" Clicked="HeaderAndFooter_Clicked"/>
        <Button Text="Uneven Rows" Clicked="UnevenRows_Clicked"/>
        <Button Text="Pull to Refresh" Clicked="PullToRefresh_Clicked"/>
