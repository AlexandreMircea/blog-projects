             xmlns:local="clr-namespace:ListViewExamples"
             x:Class="ListViewExamples.MainPage">

    <StackLayout>
        <Button Text="Basic" Clicked="Basic_Clicked"/>
        <Button Text="Slightly Less Basic" Clicked="SlightlyLessBasic_Clicked"/>
